<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="530.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Arquivo">
               <items>
                  <MenuItem fx:id="mnConfiguracoes" mnemonicParsing="false" onAction="#handleConfiguracoes" text="Configurações" visible="false">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" visible="false" />
                  <MenuItem fx:id="mnSair" mnemonicParsing="false" onAction="#handleSair" text="Sair" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem fx:id="mnAjuda" mnemonicParsing="false" onAction="#handleAbout" text="Sobre">
              	<accelerator>
                	<KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
              </MenuItem>
              
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
